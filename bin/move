#!/usr/bin/env ruby

require_relative '../lib/move.rb'
puts "Welcome to Tic Tac Toe!"
board = [" "," "," "," "," "," "," "," "," "]
puts "Where would you like to go?"

answer = gets.strip
answer = input_to_index(answer)

move (board, answer)

  display_board(board)
end

def update_array_at_with(array, index, value)
  array[index] = value
end

update_array_at_with(board, input, "X")

